<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        android:orientation="vertical"
        android:background="@drawable/bg_gradient_trans_white"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.home.HimpunanMainMenuFragment">

    <TextView
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:text="Himpunan"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_main_menu_himpunan"
            tools:listitem="@layout/item_himpunan_main_menu_list"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:clipToPadding="false"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>